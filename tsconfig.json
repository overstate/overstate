{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": false,

    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./",
    "lib": ["es6"],
    "module": "es6",
    "removeComments": true,
    "target": "esnext",
    "jsx": "preserve"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
